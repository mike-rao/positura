{
  "name": "posture-app-frontend",
  "version": "0.1.0",
  "main": "main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "electron": "electron .",
    "dev:electron": "npm run build && electron .",
    "package": "electron-builder"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "next": "14.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.17",
    "concurrently": "^9.1.2",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1"
  },
  "build": {
    "appId": "com.postureapp",
    "productName": "Posture Tracker",
    "files": [
      "main.js",
      ".next/**/*",
      "public/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
